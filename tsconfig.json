{
  "compilerOptions": { /* Docs: https://www.typescriptlang.org/tsconfig */

    "target": "es2021",
    "module": "commonjs",
    "outDir": "bin",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "checkJs": true,
    "allowJs": true,
    
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": [
      "es2021"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/environment.d.ts"
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**"
  ],
  "ts-node": {
    "files": true
  },
  "typeRoots": ["./node_modules/@types", "./src/models/types"]
}